<% form_for( :cache_a_demonstration, @cache_a_demonstration, :url=> { :controller=>'actions', :action=>'update' },  :html => { :id => 'edit_action' } ) do |f| %>
  <%= f.error_messages %>

  <li>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </li>
  <li>
    <%= f.label :comments %>
    <%= f.text_area :comments, :rows => 3 %>
  </li>
  <li>
    <%= f.label 'Operation'%>
    <%= select_tag('cache_a_demonstration[operation]', options_for_select(CacheADemonstration::OPERATION_LIST, @cache_a_demonstration.operation)) %>
  </li>

<% end %>
